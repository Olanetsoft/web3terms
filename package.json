{
  "name": "web3terms",
  "version": "1.0.0",
  "description": "Explaining and Simplifying web3 terms",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "sort": "cd bin && node sort.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "precommit": "lint-staged",
    "test": "jest --silent",
    "test:ci": "jest --verbose"
  },
  "repository": "https://github.com/Olanetsoft/web3terms.git",
  "author": "Idris Olubisi <heedris2olubisi@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.26.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.17.3",
    "node-schedule": "^2.1.0",
    "prettier": "^2.6.2",
    "twit": "^2.2.11",
    "url": "^0.11.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.3",
    "eslint": "^8.12.0",
    "husky": "4",
    "jest": "^29.1.2",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit && yarn run sort && git add -A && yarn test"
    }
  },
  "lint-staged": {
    "*.js": "eslint -- . && prettier --write"
  }
}
